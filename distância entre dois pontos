#include <stdio.h>
#include <math.h>
 
int main() {
    double x1, x2, y1, y2, soma, distancia;
    print("Digite as cordenadas do primeiro ponto(2 números com casa decimal): ");
    scanf("%lf %lf", &x1, &y1);
    print("Digite as cordenadas do segundo ponto(2 números com casa decimal): ");
    scanf("%lf %lf", &x2, &y2);
    soma = ((x2-x1)*(x2-x1))+((y2-y1)*(y2-y1));
    distancia = sqrt(soma);
    printf("a distância é de %.4lf\n", distancia);
    return 0;
}
